# Trading App Configuration
# ==========================
# Copy this file to .env and fill in your values.
# SECURITY: NEVER commit .env to version control!

# Polygon.io API (used for both market data AND news)
# Get your key at: https://polygon.io/
# Your Starter plan ($29/mo) includes both market data and news API access
POLYGON_API_KEY=your_polygon_api_key_here

# Telegram alerts (optional)
TELEGRAM_BOT_TOKEN=your_telegram_bot_token_here
TELEGRAM_CHAT_ID=your_telegram_chat_id_here

# Email alerts via SMTP (optional)
SMTP_HOST=smtp.example.com
SMTP_PORT=587
SMTP_USERNAME=your_smtp_username_here
SMTP_PASSWORD=your_smtp_password_here
EMAIL_FROM=alerts@example.com
EMAIL_TO=you@example.com

# OHLCV Cache Configuration
# -------------------------
CACHE_BACKEND=duckdb
CACHE_PATH=cache/ohlcv_cache.duckdb
CACHE_DATA_DIR=cache/parquet
CACHE_KEEP_BARS_1H=500
CACHE_KEEP_BARS_4H=400

# Scanning Performance
# --------------------
MAX_WORKERS=32
MAX_REQUESTS_PER_SECOND=10
RETRY_MAX=5
RETRY_BACKOFF_BASE=0.5

# S3 Flat Files (OPTIONAL - for bulk historical backfill)
# -------------------------------------------------------
MASSIVE_S3_ACCESS_KEY_ID=your_s3_access_key_here
MASSIVE_S3_SECRET_ACCESS_KEY=your_s3_secret_key_here
MASSIVE_S3_ENDPOINT_URL=https://files.polygon.io
MASSIVE_S3_BUCKET=flatfiles
